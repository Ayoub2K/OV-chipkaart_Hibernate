<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/xsd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/ovchip</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">postgres</property>

        <mapping class="product.Product"/>
        <mapping class="adres.Adres"/>
        <mapping class="ovchipkaart.OvChipkaart"/>
        <mapping class="reiziger.Reiziger"/>
    </session-factory>
</hibernate-configuration>